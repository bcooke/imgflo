{
  "name": "imgflo-mermaid",
  "version": "0.1.0",
  "description": "Mermaid diagram generator for imgflo - create flowcharts, sequence diagrams, and more",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "imgflo",
    "mermaid",
    "diagram",
    "flowchart",
    "sequence-diagram",
    "visualization",
    "image-generation"
  ],
  "author": "Brett Cooke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcooke/imgflo.git",
    "directory": "packages/imgflo-mermaid"
  },
  "peerDependencies": {
    "imgflo": "workspace:*"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "imgflo": "workspace:*",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
